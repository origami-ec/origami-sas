FROM openjdk:22-oraclelinux8
#RUN apk add --update ttf-dejavu && rm -rf /var/cache/apk/*
COPY ./target/org-ibarra-activiti-0.0.1.jar /opt/app/org-ibarra-activiti-0.0.1.jar
